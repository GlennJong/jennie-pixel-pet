      "actions": {
        "drink": {
          "action": "drink",
          "plays": {
            "default": ["drink"],
            "status:normal": ["drink"],
            "status:sleep": ["wake-up", "drink", "lay-down"],
            "status:death": ["egg"]
          },
          "user": "system",
          "effect": {
            "hp": { "method": "add", "value": 10 },
            "coin": { "method": "add", "value": 1 }
          },
          "dialogs": [
            {
              "sentences": [
                {
                  "portrait": "mycharacter_face-normal",
                  "text": "感謝 {{user}} 兌換\n補充喝水，為AFK增加了 10 點生命！"
