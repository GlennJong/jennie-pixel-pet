            "status:sleep": ["sleep"],
            "status:death": ["egg"]
          },
          "piority": 10,
          "is_move": true,
          "direction": "right"
        },
        "wink-left": {
          "plays": {
            "default": ["wink-left"],
            "status:normal": ["wink-left"],
            "status:sleep": ["sleep"],
            "status:death": ["egg"]
