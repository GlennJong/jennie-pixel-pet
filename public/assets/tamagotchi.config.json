        { "prefix": "idle-right", "qty": 2, "freq": 1, "repeat": 0 },
        { "prefix": "stare-left", "qty": 6, "freq": 4, "repeat": 0 },
        { "prefix": "stare-right", "qty": 6, "freq": 4, "repeat": 0 },
        { "prefix": "wink-left", "qty": 3, "freq": 4, "repeat": 0 },
        { "prefix": "wink-right", "qty": 3, "freq": 4, "repeat": 0 }
      ],
      "statuses": {
        "normal": {
          "idle": true,
          "rules": {
            "hp": { "method": "sub", "value": 1, "interval": 600 }
          }
        },
        "sleep": {
          "idle": false,
          "play": "sleep",
          "rules": {
            "hp": { "method": "add", "value": 1, "interval": 1200 }
          }
        },
        "death": {
          "idle": false,
          "play": "egg",
          "rules": {
            "hp": { "method": "add", "value": 1, "interval": 500 }
          }
        }
      },
      "idleness": {
        "idle-left": {
          "plays": {
            "default": ["idle-left"],
            "status:normal": ["idle-left"],
            "status:sleep": ["sleep"],
            "status:death": ["egg"]
