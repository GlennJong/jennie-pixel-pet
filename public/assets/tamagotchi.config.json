        "animation": "arrow"
      },
      "selectors": [
        {
          "animation": {
            "selected": "water-selected",
            "unselected": "water-unselected"
          },
          "action": {
            "default": "drink",
            "status:normal": "drink",
            "status:sleep": "drink",
            "status:death": "disable"
          }
        },
        {
          "animation": {
            "selected": "battle-selected",
            "unselected": "battle-unselected"
          },
          "action": {
            "default": "battle",
            "status:normal": "battle",
            "status:sleep": "battle",
            "status:death": "disable"
          }
        },
        {
          "animation": {
            "selected": "write-selected",
            "unselected": "write-unselected"
          },
          "action": {
            "default": "write",
            "status:normal": "write",
            "status:sleep": "write",
            "status:death": "disable"
          }
        },
        {
          "animation": {
            "selected": "sleep-selected",
            "unselected": "sleep-unselected"
          },
          "action": {
            "default": "sleep",
            "status:normal": "sleep",
            "status:sleep": "awake",
            "status:death": "disable"
          }
        }
      ],
      "resources": [
        {
          "resource": "hp",
          "animation": "heart"
        },
        {
          "resource": "coin",
          "animation": "coin"
        }
      ]
    },
    "mycharacter": {
      "animations": [
        { "prefix": "face-normal", "qty": 1, "freq": 1, "repeat": 0 },
        { "prefix": "face-angry", "qty": 1, "freq": 1, "repeat": 0 },
        { "prefix": "face-sad", "qty": 1, "freq": 1, "repeat": 0 },
        { "prefix": "born", "qty": 7, "freq": 8, "repeat": 0 },
        { "prefix": "egg", "qty": 2, "freq": 1, "repeat": 0 },
        { "prefix": "walk-left", "qty": 6, "freq": 8, "repeat": 4 },
        { "prefix": "walk-right", "qty": 6, "freq": 8, "repeat": 4 },
        { "prefix": "drink", "qty": 7, "freq": 4, "repeat": 0, "repeat_delay": 1000 },
        { "prefix": "write", "qty": 13, "freq": 8, "repeat": 0, "repeat_delay": 1000 },
        { "prefix": "lay-down", "qty": 4, "freq": 8, "repeat": 0 },
        { "prefix": "wake-up", "qty": 5, "freq": 8, "repeat": 0 },
        { "prefix": "sleep", "qty": 5, "freq": 2, "repeat": 0 },
