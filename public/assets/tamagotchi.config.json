          "auto": true,
          "condition": {
            "win": 1
          },
          "effect": {
            "coin": { "method": "add", "value": 100 },
            "win": { "method": "set", "value": 0 }
          },
          "dialogs": [
            {
              "sentences": [
                {
                  "portrait": "face-normal",
