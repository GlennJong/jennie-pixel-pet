        "png": "tamagotchi/header/icons.png",
        "json": "tamagotchi/header/icons.json"
      },
      "animations": [
        { "prefix": "arrow", "qty": 1, "freq": 1, "repeat": 0 },
        { "prefix": "water-unselected", "qty": 1, "freq": 1, "repeat": 0 },
        { "prefix": "water-selected", "qty": 5, "freq": 8, "repeat": -1 },
        { "prefix": "battle-unselected", "qty": 1, "freq": 1, "repeat": 0 },
        { "prefix": "battle-selected", "qty": 4, "freq": 8, "repeat": -1 },
        { "prefix": "write-unselected", "qty": 1, "freq": 1, "repeat": 0 },
